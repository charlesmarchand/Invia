<% @jobs.each do |job| %>
  <div class="modal fade" id="ModalLong<%= job.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="popup-titre"> <h2><%= job.name %></h2></div>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="popup-image" style="background-image: url(<%= job.url %>)"></div>
          <div class="popup-description"> <%= job.description %> </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
<!-- Fin de la modal -->
