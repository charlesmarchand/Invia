<div class="titles"> <h1>Choisis le parcours qui te plaît</h1>
<h2>Voici les propositions de parcours qui correspondent à tes passions !</h2></div>


<div class="container-cards">
  <div class="row">
    <% @studies.each do |study| %>

      <div class="col-xs-12 col-sm-4">
        <div class="card-vertical">
          <div class="heart"> <i class="far fa-heart"></i> </div>
          <div class="img-vertical" style="background-image: url(/assets/datascientist.jpeg)"></div>
          <div class="card-vertical-category"> <h2><%= study.name %></h2>
          </div>

          <div class="details">
            <% study.difficulty.to_i.times do  %>
             <i class="fas fa-star"></i>
            <% end %>
            <h3> 3 années </h3
          </div>

          <div class="card-vertical-description">
            <% study.diplomas.each do |diploma| %>
            <p><%= diploma.description %></p>
            <% end %>
          </div>
          <!-- Bouton pour lancer la modal -->
          <div class="buttoncenter"> <a class="ensavoirplus underlined" href="#ModalLong<%= study.id %>" data-toggle="modal" >En savoir plus...</a></div>
          <!-- Modal -->
          <div class="modal fade" id="ModalLong<%= study.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <div class="popup-titre"> <h2><%= study.name %></h2></div>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <div class="popup-image" style="background-image: url('<%= study.url %>')"></div>
                  <div class="popup-description">
                    <%= study.description %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Fin de la modal -->
          <%= link_to "Les établissements", job_study_path(@job, study), class: "ctaButton" %>
        </div>
      </div>
    <% end %>
    <div class="arrow" >  <a href=""></a> <i class="fas fa-angle-double-right"></i> </div>
  </div>
</div>
